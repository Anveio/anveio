{
  "name": "Anveio Dev",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "remoteUser": "node",
  "updateRemoteUserUID": true,
  "runArgs": [
    "--init",
    "--cap-drop=ALL",
    "--security-opt=no-new-privileges:true"
  ],
  "mounts": [
    "type=volume,source=npm-cache,target=/home/node/.npm"
  ],
  "postCreateCommand": "npm install && bd --version && gh --version && vercel --version",
  "customizations": {
    "vscode": {
      "extensions": [
        "biomejs.biome"
      ]
    }
  }
}
