{
  "name": "@anveio/blog",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "npm-run-all --parallel dev:frontend dev:backend",
    "dev:frontend": "next dev",
    "dev:backend": "convex dev",
    "predev": "convex dev --until-success && convex dashboard",
    "build": "next build",
    "start": "next start",
    "lint": "biome lint --fix",
    "format": "biome format --write .",
    "typecheck": "tsc --noEmit",
    "test": "npm-run-all --parallel test:unit:watch test:convex:watch",
    "test:unit:watch": "vitest --config vitest.config.ts",
    "test:convex:watch": "vitest --config vitest.convex.config.ts",
    "test:unit": "vitest run --config vitest.config.ts",
    "test:convex": "vitest run --config vitest.convex.config.ts",
    "test:once": "npm-run-all test:unit test:convex",
    "test:debug": "vitest --config vitest.config.ts --inspect-brk --no-file-parallelism",
    "test:convex:debug": "vitest --config vitest.convex.config.ts --inspect-brk --no-file-parallelism",
    "test:coverage": "npm-run-all test:unit:coverage test:convex:coverage",
    "test:unit:coverage": "vitest run --config vitest.config.ts --coverage --coverage.reporter=text",
    "test:convex:coverage": "vitest run --config vitest.convex.config.ts --coverage --coverage.reporter=text"
  },
  "dependencies": {
    "@convex-dev/better-auth": "^0.9.1",
    "better-auth": "^1.3.27",
    "convex": "^1.27.5",
    "date-fns": "^4.1.0",
    "effect": "^3.17.13",
    "gray-matter": "^4.0.3",
    "js-yaml": "^4.1.0",
    "marked": "^15.0.11",
    "next": "15.5.3",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "resend": "^3.5.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.2",
    "@edge-runtime/vm": "^5.0.0",
    "@tailwindcss/postcss": "^4",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "autoprefixer": "^10.4.21",
    "convex-test": "^0.0.38",
    "jsdom": "^25.0.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.14",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "optionalDependencies": {
    "lightningcss-darwin-arm64": "1.30.1",
    "lightningcss-darwin-x64": "1.30.1",
    "lightningcss-freebsd-x64": "1.30.1",
    "lightningcss-linux-arm-gnueabihf": "1.30.1",
    "lightningcss-linux-arm64-gnu": "1.30.1",
    "lightningcss-linux-arm64-musl": "1.30.1",
    "lightningcss-linux-x64-gnu": "1.30.1",
    "lightningcss-linux-x64-musl": "1.30.1",
    "lightningcss-win32-arm64-msvc": "1.30.1",
    "lightningcss-win32-x64-msvc": "1.30.1"
  }
}
