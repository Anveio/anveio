{
  "name": "@anveio/software",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "infra/*",
    "scripts"
  ],
  "scripts": {
    "clean": "git clean -xfd .",
    "dev": "npm --workspace apps/blog run dev",
    "dev:frontend": "npm --workspace apps/blog run dev:frontend",
    "dev:backend": "npm --workspace apps/blog run dev:backend",
    "build": "npm --workspace apps/blog run build",
    "start": "npm --workspace apps/blog run start",
    "lint": "biome lint --fix .",
    "format": "biome format --write .",
    "typecheck": "npm --workspaces --if-present run typecheck",
    "test": "npm --workspace apps/blog run test:once",
    "test:watch": "npm --workspace apps/blog run test",
    "images": "node scripts/generate-images.ts",
    "seed:admin": "node scripts/seed-admin.ts",
    "ops": "node scripts/index.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.2"
  }
}
